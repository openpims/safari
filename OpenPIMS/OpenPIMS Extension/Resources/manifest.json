{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/openpims.png",
        "96": "images/openpims.png", 
        "128": "images/openpims.png",
        "256": "images/openpims.png",
        "512": "images/openpims.png"
    },

    "background": {
        "scripts": [ "background.js" ],
        "type": "module"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "<all_urls>" ],
        "run_at": "document_start",
        "all_frames": true
    }],
    

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/openpims.png"
    },

    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "nativeMessaging"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "declarative_net_request": {
        "rule_resources": [{
            "id": "openpims_headers",
            "enabled": true,
            "path": "dnr_rules.json"
        }]
    }
}
